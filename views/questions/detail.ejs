<div>
    <h3><%= description %></h3>
    <form action="/question/<%= question._id %>" method="POST">
        <div class="row form-group mb-4">
            <div class="col">
                <label for="text">Question Text</label>
                <input
                    type="text"
                    class="form-control"
                    id="text"
                    name="text"
                    value="<%= question.text %>"
                    placeholder="Enter the question"
                    required
                />
            </div>

            <div class="col">
                <label for="option">Options (comma separated)</label>
                <input
                    type="text"
                    class="form-control"
                    id="option"
                    name="option"
                    value="<%= question.option.join(', ') %>"
                    required
                />
            </div>

            <div class="col">
                <label for="correctAnswer">Correct Answer (comma separated)</label>
                <input
                    type="text"
                    class="form-control"
                    id="correctAnswer"
                    name="correctAnswer"
                    value="<%= question.correctAnswer.join(', ') %>"
                    placeholder="Enter the correct answer"
                    required
                />
            </div>
        </div>

        <div class="form-group mb-4">
            <button type="submit" class="btn btn-primary">Update Question</button>
        </div>
    </form>
</div>
